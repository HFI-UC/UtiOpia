{
  "name": "utiopia/backend",
  "description": "UtiOpia 留言墙后端 (PHP, Slim 4, JWT, MySQL, COS, Turnstile)",
  "type": "project",
  "require": {
    "php": ">=8.0",
    "slim/slim": "^4.12",
    "slim/psr7": "^1.6",
    "php-di/php-di": "^7.0",
    "vlucas/phpdotenv": "^5.6",
    "firebase/php-jwt": "^6.9",
    "qcloud/cos-sdk-v5": "^2.6",
    "guzzlehttp/guzzle": "^7.8",
    "respect/validation": "^2.2",
    "phpmailer/phpmailer": "^6.9"
  },
  "autoload": {
    "psr-4": {
      "UtiOpia\\": "src/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "scripts": {
    "start": "php -S 0.0.0.0:8080 -t public public/index.php",
    "migrate": "php scripts/migrate.php",
    "test": "vendor/bin/phpunit -c phpunit.xml --testdox"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6"
  }
}
