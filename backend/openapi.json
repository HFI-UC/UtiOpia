{
  "openapi": "3.0.3",
  "info": {
    "title": "UtiOpia 留言墙 API",
    "description": "UtiOpia 留言墙后端 API 文档 - 支持用户认证、留言管理、文件上传、审核系统等功能",
    "version": "1.0.0",
    "contact": {
      "name": "UtiOpia 开发团队",
      "email": "admin@example.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "开发服务器"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "tags": ["系统"],
        "summary": "健康检查",
        "description": "检查系统运行状态",
        "responses": {
          "200": {
            "description": "系统正常",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean",
                      "example": true
                    },
                    "ts": {
                      "type": "integer",
                      "description": "当前时间戳",
                      "example": 1640995200
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/register": {
      "post": {
        "tags": ["认证"],
        "summary": "用户注册",
        "description": "注册新用户，需要符合特定邮箱格式和学号格式",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password", "nickname", "student_id", "turnstile_token"],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "pattern": "^[a-z]+\\.[a-z]+20\\d{2}@gdhfi\\.com$",
                    "description": "邮箱，必须符合格式：姓名.姓名年份@gdhfi.com",
                    "example": "zhang.san2023@gdhfi.com"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 6,
                    "description": "密码，最少6位",
                    "example": "password123"
                  },
                  "nickname": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 50,
                    "description": "昵称",
                    "example": "张三"
                  },
                  "student_id": {
                    "type": "string",
                    "pattern": "^GJ20\\d{2}\\d{4}$",
                    "description": "学生号，格式：GJ + 年份 + 四位数字",
                    "example": "GJ20230001"
                  },
                  "turnstile_token": {
                    "type": "string",
                    "description": "Turnstile 验证码令牌"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "注册成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean",
                      "example": true
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "注册失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/login": {
      "post": {
        "tags": ["认证"],
        "summary": "用户登录",
        "description": "用户登录获取访问令牌",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password", "turnstile_token"],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "zhang.san2023@gdhfi.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password123"
                  },
                  "turnstile_token": {
                    "type": "string",
                    "description": "Turnstile 验证码令牌"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "登录成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "description": "JWT 访问令牌"
                    },
                    "user": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "登录失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/me": {
      "get": {
        "tags": ["认证"],
        "summary": "获取当前用户信息",
        "description": "获取当前登录用户的详细信息",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "用户信息获取成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "$ref": "#/components/schemas/UserDetail"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "未授权",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/upload/presign": {
      "post": {
        "tags": ["文件上传"],
        "summary": "获取预签名上传 URL",
        "description": "获取用于直接上传文件到 COS 的预签名 URL",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["filename"],
                "properties": {
                  "filename": {
                    "type": "string",
                    "description": "文件名",
                    "example": "image.jpg"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "预签名 URL 生成成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "upload_url": {
                      "type": "string",
                      "description": "预签名上传 URL"
                    },
                    "file_url": {
                      "type": "string",
                      "description": "上传后的文件访问 URL"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/upload/sts": {
      "post": {
        "tags": ["文件上传"],
        "summary": "获取临时访问凭证",
        "description": "获取用于上传文件的临时访问凭证（STS）",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["filename"],
                "properties": {
                  "filename": {
                    "type": "string",
                    "description": "文件名",
                    "example": "image.jpg"
                  },
                  "max_bytes": {
                    "type": "integer",
                    "description": "最大文件大小（字节）",
                    "default": 5242880,
                    "example": 5242880
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "临时凭证生成成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "credentials": {
                      "type": "object",
                      "description": "临时访问凭证"
                    },
                    "bucket": {
                      "type": "string",
                      "description": "存储桶名称"
                    },
                    "region": {
                      "type": "string",
                      "description": "地域"
                    },
                    "key": {
                      "type": "string",
                      "description": "对象键"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/messages": {
      "get": {
        "tags": ["留言"],
        "summary": "获取留言列表",
        "description": "分页获取留言列表，支持按状态筛选",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "页码",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "default": 1
            }
          },
          {
            "name": "pageSize",
            "in": "query",
            "description": "每页条数",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 50,
              "default": 10
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "留言状态筛选",
            "schema": {
              "type": "string",
              "enum": ["pending", "approved", "rejected", "all"],
              "default": "approved"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "留言列表获取成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "items": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Message"
                      }
                    },
                    "total": {
                      "type": "integer",
                      "description": "总数"
                    },
                    "page": {
                      "type": "integer",
                      "description": "当前页码"
                    },
                    "pageSize": {
                      "type": "integer",
                      "description": "每页条数"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["留言"],
        "summary": "创建留言",
        "description": "创建新留言，支持匿名和实名发布",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["content", "turnstile_token"],
                "properties": {
                  "content": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 500,
                    "description": "留言内容"
                  },
                  "image_url": {
                    "type": "string",
                    "format": "uri",
                    "description": "图片 URL（可选）"
                  },
                  "is_anonymous": {
                    "type": "boolean",
                    "description": "是否匿名发布",
                    "default": false
                  },
                  "anon_email": {
                    "type": "string",
                    "format": "email",
                    "pattern": "^[a-z]+\\.[a-z]+20\\d{2}@gdhfi\\.com$",
                    "description": "匿名邮箱（匿名发布且未登录时必填）"
                  },
                  "anon_student_id": {
                    "type": "string",
                    "pattern": "^GJ20\\d{2}\\d{4}$",
                    "description": "匿名学号（匿名发布且未登录时必填）"
                  },
                  "anon_passphrase": {
                    "type": "string",
                    "description": "匿名口令（匿名发布且未登录时必填，用于后续编辑）"
                  },
                  "turnstile_token": {
                    "type": "string",
                    "description": "Turnstile 验证码令牌"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "留言创建成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean",
                      "example": true
                    },
                    "id": {
                      "type": "integer",
                      "description": "留言 ID"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "创建失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/messages/{id}": {
      "put": {
        "tags": ["留言"],
        "summary": "更新留言",
