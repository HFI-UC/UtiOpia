                  },
                  "anon_passphrase": {
                    "type": "string",
                    "description": "匿名口令（匿名留言编辑时必填）"
                  },
                  "turnstile_token": {
                    "type": "string",
                    "description": "Turnstile 验证码令牌"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "更新成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean",
                      "example": true
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "权限不足",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["留言"],
        "summary": "删除留言",
        "description": "软删除指定 ID 的留言",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "留言 ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["turnstile_token"],
                "properties": {
                  "anon_passphrase": {
                    "type": "string",
                    "description": "匿名口令（匿名留言删除时必填）"
                  },
                  "turnstile_token": {
                    "type": "string",
                    "description": "Turnstile 验证码令牌"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "删除成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean",
                      "example": true
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "权限不足",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
