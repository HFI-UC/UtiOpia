  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "使用 JWT 令牌进行身份验证。在请求头中包含：Authorization: Bearer <token>"
      }
    },
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "description": "错误信息"
          }
        },
        "required": ["error"]
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "用户 ID"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "邮箱"
          },
          "role": {
            "type": "string",
            "enum": ["super_admin", "moderator", "user"],
            "description": "用户角色"
          },
          "nickname": {
            "type": "string",
            "description": "昵称"
          }
        },
        "required": ["id", "email", "role", "nickname"]
      },
      "UserDetail": {
        "allOf": [
          {
            "$ref": "#/components/schemas/User"
          },
          {
            "type": "object",
            "properties": {
              "banned": {
                "type": "boolean",
                "description": "是否被封禁"
              },
              "created_at": {
                "type": "string",
                "format": "date-time",
                "description": "创建时间"
              }
            },
            "required": ["banned", "created_at"]
          }
        ]
      },
      "Message": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "留言 ID"
          },
          "user_id": {
            "type": "integer",
            "nullable": true,
            "description": "用户 ID（匿名留言时为 null）"
          },
          "is_anonymous": {
            "type": "boolean",
            "description": "是否匿名留言"
          },
          "content": {
            "type": "string",
            "description": "留言内容"
          },
          "image_url": {
            "type": "string",
            "nullable": true,
            "description": "图片 URL"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "approved", "rejected"],
            "description": "留言状态"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "创建时间"
          },
          "user_email": {
            "type": "string",
            "nullable": true,
            "description": "用户邮箱（非匿名时显示）"
          },
          "anon_email": {
            "type": "string",
            "nullable": true,
            "description": "匿名邮箱（仅管理员可见）"
          },
          "anon_student_id": {
            "type": "string",
            "nullable": true,
            "description": "匿名学号（仅管理员可见）"
          }
        },
        "required": ["id", "is_anonymous", "content", "status", "created_at"]
      },
      "Ban": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "封禁记录 ID"
          },
          "type": {
            "type": "string",
            "enum": ["email", "student_id"],
            "description": "封禁类型"
          },
          "value": {
            "type": "string",
            "description": "封禁值"
          },
          "reason": {
            "type": "string",
            "nullable": true,
            "description": "封禁理由"
          },
          "created_by": {
            "type": "integer",
            "nullable": true,
            "description": "创建者用户 ID"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "创建时间"
          },
          "active": {
            "type": "boolean",
            "description": "是否激活"
          },
          "expires_at": {
            "type": "string",
            "format": "date-time",
            "nullable": true,
            "description": "过期时间"
          }
        },
        "required": ["id", "type", "value", "created_at", "active"]
      },
      "AuditLog": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "日志 ID"
          },
          "action": {
            "type": "string",
            "description": "操作类型"
          },
          "user_id": {
            "type": "integer",
            "nullable": true,
            "description": "用户 ID"
          },
          "meta": {
            "type": "object",
            "nullable": true,
            "description": "元数据"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "创建时间"
          }
        },
        "required": ["id", "action", "created_at"]
      },
      "StatsOverview": {
        "type": "object",
        "properties": {
          "users": {
            "type": "object",
            "properties": {
              "total": {
                "type": "integer",
                "description": "总用户数"
              },
              "banned": {
                "type": "integer",
                "description": "被封禁用户数"
              }
            }
          },
          "messages": {
            "type": "object",
            "properties": {
              "total": {
                "type": "integer",
                "description": "总留言数"
              },
              "pending": {
                "type": "integer",
                "description": "待审核留言数"
              },
              "approved": {
                "type": "integer",
                "description": "已通过留言数"
              },
              "rejected": {
                "type": "integer",
                "description": "已拒绝留言数"
              }
            }
          },
          "bans": {
            "type": "object",
            "properties": {
              "total": {
                "type": "integer",
                "description": "总封禁数"
              },
              "active": {
                "type": "integer",
                "description": "激活封禁数"
              }
            }
          },
          "health": {
            "type": "object",
            "properties": {
              "database": {
                "type": "boolean",
                "description": "数据库状态"
              },
              "uptime": {
                "type": "string",
                "description": "系统运行时间"
              }
            }
          }
        }
      }
    }
